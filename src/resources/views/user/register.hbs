<div>
    <div class="container">
        <div class="row ps-3 pt-4"><h1>Đăng Ký</h1></div>
            <div class="row mt-5 d-flex align-items-center justify-content-center">
                <div class="col-3 ps-5 pe-5">
                    <label for="time-calendar" class="form-label">Thời Gian</label>
                    <input type="text" class="form-control text-center mt-3" id="time-calendar" placeholder="__ __ /__ __ /__ __ __ __"/>
                </div>
                <div class="col-5 ps-5 pe-5">
                    <label for="filter-calendar" class="form-label">Bộ Lọc</label>
                    <select class="form-select mt-3" aria-label="Default select example">
                    <option selected>Tuỳ chọn</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                    </select>
                </div>
                
            <div class="col-2 ps-5 pt-5"><a href="/user/register/injection" class="btn btn-primary">+ Lịch Tiêm</a></div>
            <div class="col-2 pt-5"><a href="/user/register/doctor" class="btn btn-primary">+ Lịch khám</a></div>
        </div>
        <div class="row me-5">
            <table class="table m-5 pe-5 shadow rounded-5">
                <thead class="header-table">
                <tr style="height: 40px;">
                    <th style="width:200px;">Tên</th>
                    <th style="width:200px;">Tuổi</th>
                    <th style="width:200px;">Loại</th>
                    <th style="width:200px;">Thời gian</th>
                    <th style="width:200px;"> Ngày</th>
                    <th colspan="2" style="width:300px;">Tình Trạng</th>
                </tr>
                </thead>
                <tbody>
                    {{#each Register}}
                    <tr>
                        <td></td>
                        <td>{{this.name}}</td>
                        <td>{{this.old}}</td>
                        <td>{{this.option}}</td>
                        {{!-- <td>{{this.time}}</td> --}}
                        <td>{{this.date}}</td>
                        <td>
                            <button class="btn btn-danger ms-2">Xoá</button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>